<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- SitRepDashboard - Global Config Settings for client only mode 
		( no php / server side stuff).

-->
<settings>
	<single_user>true</single_user>
	<runFromServer>false</runFromServer>

	<public_data_directory>sr_data_public</public_data_directory>
	<private_data_directory>sr_data_private</private_data_directory>


	<default_projection>EPSG:4326</default_projection>
	<start_lat>40.713</start_lat>
	<start_lon>-73.998</start_lon>
	<start_zoom>13</start_zoom>


	<layers>


<!-- BASE LAYERS -->
		<layer>
			<id>1</id>
			<name>SitRep GIS</name>	
			<layertype>XYZ</layertype>
			<isBaseLayer>true</isBaseLayer>
			<visibility>true</visibility>
			<projection>EPSG:4326</projection>
			<sphericalMercator>true</sphericalMercator>
			<url>http://SitRepGIS.local:3001/mq_tiles/${z}/${x}/${y}.png</url>
			<numZoomLevels>19</numZoomLevels>
			<attribution>&lt;img src="img/SitRepLogo_Tiny.png" height="25" width="60"&gt;</attribution>
		</layer>

		<layer>
			<id>2</id>
			<name>OSM - from openstreetmap.org</name>	
			<layertype>XYZ</layertype>
			<isBaseLayer>true</isBaseLayer>
			<visibility>false</visibility>
			<projection>EPSG:4326</projection>
			<sphericalMercator>true</sphericalMercator>
			<url>http://a.tile.openstreetmap.org/${z}/${x}/${y}.png</url>
			<numZoomLevels>19</numZoomLevels>
			<attribution>&lt;img src="img/SitRepLogo_Tiny.png" height="25" width="60"&gt; - Using OSM Data</attribution>
		</layer>

		<layer>
			<id>3</id>
			<name>MapQuest - from mapquest.org</name>	
			<layertype>XYZ</layertype>
			<isBaseLayer>true</isBaseLayer>
			<visibility>false</visibility>
			<projection>EPSG:4326</projection>
			<sphericalMercator>true</sphericalMercator>
			<url>http://otile1.mqcdn.com/tiles/1.0.0/osm/${z}/${x}/${y}.png</url>
			<numZoomLevels>19</numZoomLevels>
			<attribution>&lt;img src="img/SitRepLogo_Tiny.png" height="25" width="60"&gt; - Using Mapquest Data</attribution>
		</layer>


<!-- OVERLAY LAYERS -->

		<layer>
			<id>4</id>
			<name>PolicePctBoundaries</name>	
			<isBaseLayer>false</isBaseLayer>
			<layertype>Vector</layertype>
			<format>GML</format>
			<url>sr_data_public/PolicePctBoundaries.gml</url>
			<layertype>polygon</layertype>
			<projection>EPSG:4326</projection>
			<visibility>false</visibility>
			<StyleMap>
				<Style>
					<name>default</name>
					<fillColor>#0000FF</fillColor>
					<fillOpacity>0.3</fillOpacity>
					<strokeColor>#0000FF</strokeColor>
					<strokeOpacity>1</strokeOpacity>
					<pointRadius>6</pointRadius>
				</Style>
			</StyleMap>	
		</layer>




	</layers>



</settings>


